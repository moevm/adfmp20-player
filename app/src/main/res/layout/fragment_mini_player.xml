<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiniPlayerFragment"
    >

    <LinearLayout
        android:id="@+id/miniPlayer"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/colorBlack3"

        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/icoTrack"
            android:layout_width="46dp"
            android:layout_height="46dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"


            />

        <TextView
            android:id="@+id/titleTrack"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textSize="15dp"
            android:textColor="@color/colorWhite1"

            android:text="Дом восковых фигур"
            android:gravity="center_vertical"
            
            android:layout_weight="1"
            android:singleLine="true"
            />
        
        <ImageView

            android:id="@+id/buttonActive"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:background="@drawable/play"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_marginRight="30dp"
            />




    </LinearLayout>

</FrameLayout>