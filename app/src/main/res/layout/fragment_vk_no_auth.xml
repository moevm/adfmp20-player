<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VkNoAuthFragment"

    android:orientation="vertical"
    android:gravity="center"

    android:background="@color/colorBlack2"

    android:padding="14dp"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ввведите ID Вконтакте"

        android:textColor="@color/colorBlack4"
        />


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:ems="10"
        android:inputType="textPersonName"

        android:background="@color/colorBlack4"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="или"

        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorBlack4"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:background="@color/colorBlack4"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/vk"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти через Вконтакте"
            android:textColor="@color/colorWhite1"
            android:textSize="13dp"

            android:layout_weight="1"
            android:gravity="center"

            android:layout_marginRight="55dp"

            />


    </LinearLayout>


</LinearLayout>