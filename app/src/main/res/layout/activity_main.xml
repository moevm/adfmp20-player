<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBlack2"
    >


    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.myapplication.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.myapplication.VkFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment6"
        app:layout_constraintTop_toBottomOf="@+id/fragment5"
        app:layout_constraintVertical_weight="1"
        tools:layout_editor_absoluteX="115dp"
        />

    <fragment
        android:id="@+id/fragment6"
        android:name="com.example.myapplication.MiniPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>